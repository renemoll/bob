[flake8]
max-line-length = 88
max-complexity = 10

select = 
    ANN,  # flake8-annotations
    B,    # flake8-bugbear
    B950, # flake8-bugbear
    BLK,  # flake8-black
    C,    # mccabe
    D,    # pydocstyle
    DAR,  # draglint
    E,    # pycodestyle
    F,    # pyflakes
    H,    # hacking
    I,    # flake8-import-order
    S,    # flake8-bandit
    W     # pycodestyle

extend-ignore = 
    # D203: 1 blank line required before class docstring
    D203,
    # E203: whitespace before ‘,’, ‘;’, or ‘:’
    E203,
    # E501: line too long
    E501,
    # H301: one import per line
    H301,
    # B404: blacklist import subprocess
    S404,
    # B603: subprocess without shell equals true
    S603,
    # W503: line break before binary operator
    W503

exclude =
    .env,
    .git,
    .tox

per-file-ignores =
    **/__init__.py:F401
    tests/*.py:S101,E711,D104,DAR101

# flake8-docstrings
docstring-convention = google

# flake8-import-order
import-order-style = google
application-import-names = bob,tests

[darglint]
docstring_style = google
strictness = short
